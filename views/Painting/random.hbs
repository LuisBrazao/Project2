<body class="index-page">
  <div class="row random-page">
    {{#each painting}}
    <div class="col-md-2 d-flex"></div>
    <div class="col-md-4 d-flex">
      <img id="myImg" src="{{image_url}}" alt="{{title}}" style="width:100%;max-width:300px">
      <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01">
        <div id="caption"></div>
      </div>
    </div>
    <div class="col-md-5">
      <div id="card-body" class="card-body d-flex align-items-center flex-column">
        <h3 class="font-italic painting-title">{{title}}</h3>
        <p class="card-text">{{paintedIn}}</p>
        <p class="card-text">{{author}}</p>
        <p class="card-text-money">Cost: {{price}}$</p>
        <form action="/addWishlist/{{_id}}" method="POST">
          <button type="submit" class="btn btn-secondary">Add to Wishlist</button>
        </form>
        <a href="/showRandom" class="btn btn-secondary btn-md bg-transparent border-0">Next</a>
      </div>
    </div>
    {{#if errorMessage}}
    <div>
      {{errorMessage}}
    </div>
    {{/if}}
    {{/each}}
  </div>
</body>
<script>
  var modal = document.getElementById("myModal");
  var img = document.getElementById("myImg");
  var modalImg = document.getElementById("img01");
  var captionText = document.getElementById("caption");
  img.onclick = function () {
    modal.style.display = "block";
    modalImg.src = this.src;
    captionText.innerHTML = this.alt;
  }

  var span = document.getElementsByClassName("close")[0];

  span.onclick = function () {
    modal.style.display = "none";
  }
</script>