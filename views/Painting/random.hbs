<body class="index-page">
<div class="row tp-7"></div>
<div class="row random-page">
  {{#each painting}}
  <div class="col-md-2 d-flex"></div>
  <div class="col-md-4 d-flex">
    <a href="/fullscreen">
    <img class="img-fluid" src="{{image_url}}" class="card-img-top" alt="{{title}}">
    </a>
  </div>
  <div class="col-md-5">
    <div class="card-body d-flex align-items-center flex-column">
      <h3 class="font-italic painting-title">{{title}}</h3>
      <p>{{paintedIn}}</p>
      <p class="card-text">{{author}}</p>
      <p class="card-text">Cost: {{price}}</p>
      <form action="/addWishlist/{{_id}}" method="POST">
        <button type="submit" class="btn btn-secondary">Add to Wishlist</button>
      </form>
      <a href="/showRandom" class="btn btn-secondary btn-md bg-transparent border-0">Next</a>
    </div>
  </div>
  {{/each}}
</div>
</body>
