<h2>Login</h2>
<form action="/login" method="POST">
  <label>
    Username
    <input type="text" name="username" placeholder="Your username" required>
  </label>
  <label>
    Password
    <input type="password" name="password" placeholder="your password" required>
  </label>
  <button type="submit">
    LOGIN
  </button>
</form>
{{#if errorMessage}}
<div>
  {{errorMessage}}
</div>
{{/if}}

