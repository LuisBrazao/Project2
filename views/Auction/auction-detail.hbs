<h2>Painting auction details</h2>
<div class="row">
  {{#each auctions}}
  <div class="col-md-4 mb-5">
    <div class="card" style="width: 18rem;">
      <img src="{{paintingImg}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{auctionOwner.username}} is selling: {{paintingName}}</h5>
        <p class="card-text">Current Bid: {{activePrice}} by {{winning}}</p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <form action="/bid/{{auctionID}}" method="POST">
      <label>
        Bid amount
        <input type="number" name="bidAmount" value="{{plus activePrice 100}}" min="{{plus activePrice 100}}" required>
      </label>
      <button type="submit" class="btn btn-danger">Make Bid</button>
    </form>
  </div>
  {{/each}}
  {{#if errorMessage}}
  <div id="myModalDetails" class="modalDetails">
    <div class="modal-content-details">
      <span class="close-details">&times;</span>
      <p>{{errorMessage}}</p>
    </div>
  </div>
  <style>
    .modalDetails {
      display: block;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      /* Fallback color */
      background-color: rgba(0, 0, 0, 0.4);
      /* Black w/ opacity */
    }

    /* Modal Content/Box */
    .modal-content-details {
      background-color: #fefefe;
      margin: 15% auto;
      /* 15% from the top and centered */
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      /* Could be more or less, depending on screen size */
    }

    /* The Close Button */
    .close-details {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close-details:hover,
    .close-details:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
  </style>
  <script>
    var modal = document.getElementById("myModalDetails");
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close-details")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    } 
  </script>
  {{/if}}
  <hr />
</div>