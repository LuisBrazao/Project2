{{#each painting}}

<style>
  body {
    background-image: url({{image_url}});
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
  }
</style>

{{#if user}}
<div class="container d-flex">
  <h2>Welcome {{user.username}}</h2>
  <div>
    <img src={{user.image_url}}>
  </div>
  <div>
    <p>Current money: {{user.money}}$</p>
  </div>
</div>
<div>
  <p>Current money: {{user.money}}</p>
</div>
<div>
  <p><a href="/owned">My collection</a></p>
</div>
<div>
  <p><a href="/wishlist">My wishlist</a></p>
</div>
<div>
  <p><a href="/trades">Trades</a></p>
</div>

{{else}}
<div class="filter">
  <div class="container">
    <div class="row p-30">
      <div class="col-lg-12 ">
        <div class="welcome-message">
          <h1 class="welcome">Welcome to the greatest auctions website ever created.</h1>
        </div>
      </div>
    </div>
  </div>
{{/if}}
</div>
{{/each}}